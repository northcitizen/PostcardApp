<html>

<body>

    <div>
        <form method="post">
            <input type="text" name="postNumber" placeholder="Postcard's number"/>
            <input type="text" name="country" placeholder="Postcard's country"/>
            <input type="text" name="name" placeholder="Name"/>
            <input type="text" name="description" placeholder="Description"/>
            <input type="text" name="conditionValue" placeholder="Condition"/>
            <input type="text" name="distance" placeholder="Distance"/>
            <input type="text" name="dateOfSend" placeholder="Date of sending"/>
            <input type="text" name="dateOfReceive" placeholder="Date of receiving"/>
            <button type="submit" > add postcard</button>
        </form>

        <div>
            <form method="post" action="getDistanceYear">
                <input type="text" name="year" placeholder="year"/>
                <button type="submit" > distance</button>
            </form>
        </div>

        <div>
            <form method="post" action="filterByDate">
                <input type="text" name="dateFrom" placeholder="from date"/>
                <input type="text" name="dateTo" placeholder="to date"/>
                <button type="submit" > find </button>
            </form>
        </div>

    <div>Postcard's list</div>
    {{#postcards}}
        <div>
            <span>{{postNumber}}</span>
            <b>{{country}}</b>
            <b>{{name}}</b>
            <i>{{description}}</i>
            <b>{{distance}}</b>
            <span>{{conditionValue}}</span>
            <i>{{dateOfSend}}</i>
            <i>{{dateOfReceive}}</i>
        </div>
    {{/postcards}}

        <div>Distance</div>
        {{#distance}}
            {{.}}
        {{/distance}}

        {{#cards}}
            <div>
                <span>{{postNumber}}</span>
                <b>{{country}}</b>
                <b>{{name}}</b>
                <i>{{description}}</i>
                <b>{{distance}}</b>
                <span>{{conditionValue}}</span>
                <i>{{dateOfSend}}</i>
                <i>{{dateOfReceive}}</i>
            </div>
        {{/cards}}

</body>
</html>